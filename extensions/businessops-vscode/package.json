{
  "name": "businessops-vscode",
  "displayName": "BusinessOps Toolkit",
  "description": "Wizard + generator runner for BusinessOps Toolkit (Copilot-friendly, multi-provider ready).",
  "version": "0.1.0",
  "publisher": "gammacrucis",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Extension Packs",
    "Other"
  ],
  "activationEvents": [
    "onCommand:businessops.openWizard",
    "onCommand:businessops.runGenerate",
    "onCommand:businessops.generateDocs",
    "onCommand:businessops.openDocs",
    "onChatParticipant:businessops"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "businessops",
        "name": "BusinessOps",
        "fullName": "BusinessOps Toolkit",
        "description": "AI agent for structuring companies (intake, planning, diagnosis)",
        "isSticky": true,
        "commands": [
          {
            "name": "intake",
            "description": "Start guided company intake (1 question at a time)"
          },
          {
            "name": "generate",
            "description": "Generate business documentation from collected data"
          },
          {
            "name": "diagnose",
            "description": "Generate organizational diagnostic report"
          },
          {
            "name": "plan",
            "description": "Create execution plan (7/30/90 days)"
          },
          {
            "name": "swot",
            "description": "Generate SWOT analysis"
          },
          {
            "name": "canvas",
            "description": "Generate Business Model Canvas"
          },
          {
            "name": "methods",
            "description": "List all available business methods and frameworks"
          },
          {
            "name": "status",
            "description": "Show current intake progress and saved answers"
          },
          {
            "name": "help",
            "description": "Show available commands and navigation tips"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "businessops.openWizard",
        "title": "BusinessOps: Open Wizard (Intake)"
      },
      {
        "command": "businessops.runGenerate",
        "title": "BusinessOps: Generate Docs"
      },
      {
        "command": "businessops.generateDocs",
        "title": "BusinessOps: Generate Docs"
      },
      {
        "command": "businessops.openDocs",
        "title": "BusinessOps: Open Docs Folder"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "businessops",
          "title": "BusinessOps",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "businessops": [
        {
          "id": "businessops.view",
          "name": "Toolkit"
        }
      ]
    },
    "configuration": {
      "title": "BusinessOps Toolkit",
      "properties": {
        "businessops.ai.provider": {
          "type": "string",
          "default": "none",
          "description": "AI provider for suggestions (none | vscode-lm | openai | anthropic | ollama). MVP supports none."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "lint": "echo \"(optional) add eslint\"",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}